@model Lawyer
@{
    ViewData["Title"] = "Create";
}

<h1>New Lawyer</h1>
<a asp-action="index" class="btn btn-primary btn-sm">Back</a>
<form class="mt-3" method="post">
    <div class="form-group">
        <label asp-for="Fullname">Name</label>
        <input asp-for="Fullname" class="form-control" />
        <span asp-validation-for="Fullname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SpecialityId">Speciality</label>
        <select class="form-control" asp-for="SpecialityId" asp-items="@ViewBag.Groups"></select>
        <span asp-validation-for="SpecialityId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-outline-primary">Submit</button>
</form>
