                                <a href="#" class="btn btn-default">Book Now</a>
                            </div>
                        </div>
                        <div class="tour_info">
                            <h5><a href="#">@item.Name</a></h5>
                            <p>@item.Desc</p>
                            <div class="tour_foot">
                                <div class="tour_price">
                                    <h4 class="text_default">@item.Price</h4>
                                    <span>@item.Day days @item.Night nights</span>
                                </div>
                                <div class="tour_stars">
                                    <div class="stars">
                                        <i class="ion-android-star"></i>
                                        <i class="ion-android-star"></i>
                                        <i class="ion-android-star"></i>
                                        <i class="ion-android-star-half"></i>
                                        <i class="ion-android-star-outline"></i>
                                    </div>
                                    <span>(@item.Rating.ToString() Rating)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }          
        </div>
        <div class="row">
            <div class="col-12">
                <div class="clearfix medium_divider"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 text-center">
                <a asp-controller="package" asp-action="index" class="btn btn-default">View All Tours <i class="ion-ios-arrow-thin-right"></i></a>
