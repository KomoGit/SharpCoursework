            </div>
        </div>
        <div class="row">
            @foreach (TourPackage item in Model.Packages)
            {
                <div class="col-md-4 col-sm-6">
                    <div class="tour_box animation" data-animation="fadeInUp" data-animation-delay="0.3s">
                        <div class="tour_img">
                            <img src="/images/@item.Image" alt="tour_img" />
